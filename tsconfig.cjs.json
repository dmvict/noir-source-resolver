{
    "compilerOptions": {
        "target": "es2018",
        "moduleResolution": "node",
        "outDir": "nodejs",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "importHelpers": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/index.ts"
    ]
}